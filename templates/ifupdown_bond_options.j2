{% if item.parameters is defined %}
{% set params = item.parameters %}

{% if params.mode is defined %}
    bond-mode {{ params.mode }}
{% endif %}

{%- if params['mii-monitor-interval'] is defined %}
    bond-miimon {{ params['mii-monitor-interval'] }}
{% endif %}

{%- if params['transmit-hash-policy'] is defined %}
    bond-xmit-hash-policy {{ params['transmit-hash-policy'] }}
{% endif %}
  
{%- if params['lacp-rate'] is defined %}
    bond-lacp-rate {{ params['lacp-rate'] }}
{% endif %}
{% endif %}

{%- if item.interfaces is defined %}
    bond-slaves {{ item.interfaces | join(' ') }}
{% endif %}



